<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
	<name>SSO - JBRA_SSO v1.1</name>
	<author>Giannis Brailas</author>
	<creationDate>Dec 2024</creationDate>
	<copyright>Copyright (C) 2024 Giannis Brailas. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jbrailas@rns-systems.eu</authorEmail>
	<authorUrl>www.brailas.gr</authorUrl>
	<version>1.1</version>
	<buildDate>Fri Dec 12 10:27:10 2024</buildDate>
	<description>RNS_SSO joomla plugin</description>
	<files>
		<filename plugin="jbrasso">jbrasso.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
        <fields name="params">
            <fieldset name="basic">
				<field name="app_name" type="text" placeholder="azure" label="App Name" />
                <field name="app_scope" type="text" label="App Scope" />
				<field name="auth_url" type="text" label="Authorization URL" />
                <field name="token_url" type="text" label="Token URL" />
                <field name="api_url" type="text" label="User Info URL" />
                <field name="client_id" type="text" label="Client ID" />
                <field name="client_secret" type="password" label="Client Secret" />
				<field name="logout_url" type="text" label="Logout URL" />
				<field name="debug" type="checkbox" label="Enable Debug" description="Click to enable php errorlog debug" value="1" />
		   </fieldset>
        </fields>
    </config>
</extension>
